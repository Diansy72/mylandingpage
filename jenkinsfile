pipeline {
    agent {
        any
    }
    options {
        customWorkspace 'E:\\jenkins-workspace\\my-landing-page'
    }
    tools {
        nodejs 'NodeJS 17' // Sesuaikan dengan Node.js yang digunakan
    }
    environment {
        BUILD_DIR = 'build' // Direktori output build React
        DEPLOY_DIR = 'E:\\deploy\\my-landing-page' // Direktori tujuan deploy
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Diansy72/mylandingpage.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install' // Menginstal dependencies dari package.json
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test -- --ci --passWithNoTests'
            }
            post {
                success {
                    echo 'Tests passed successfully!'
                }
                failure {
                    echo 'Tests failed!'
                    error 'Stopping pipeline due to failed tests.'
                }
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build' // Perintah build React
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to production environment...'
                bat 'if not exist "%DEPLOY_DIR%" mkdir "%DEPLOY_DIR%"'
                bat 'xcopy /E /I /Y "%BUILD_DIR%" "%DEPLOY_DIR%"' // Deploy ke lokasi yang baru
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
