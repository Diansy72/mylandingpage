pipeline {
    agent any
    tools {
        nodejs 'NodeJS 17' // Sesuaikan dengan konfigurasi Node.js di Jenkins
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Diansy72/mylandingpage.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test'
            }
            post {
                success {
                    junit 'test-results.xml' // Sesuaikan dengan lokasi file hasil tes
                }
                failure {
                    echo 'Tests failed!'
                }
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to production environment...'
                bat 'xcopy /E /I /Y build docs' // Menyalin hasil build ke folder docs
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
