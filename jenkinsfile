pipeline {
    agent any
    tools {
        nodejs 'NodeJS 17' // Sesuaikan dengan versi Node.js yang digunakan
    }
    environment {
        BUILD_DIR = 'docs' // Direktori output build sesuai struktur repositori
        DEPLOY_DIR = 'C:\\path\\to\\deployment\\server' // Menggunakan double backslash
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Diansy72/mylandingpage.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install' // Menginstal dependencies dari package.json
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test -- --ci --passWithNoTests' // Menjalankan Jest dengan mode CI
            }
            post {
                success {
                    echo 'Tests passed successfully!'
                }
                failure {
                    echo 'Tests failed!'
                    error 'Stopping pipeline due to failed tests.'
                }
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build' // Perintah build React
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to production environment...'
                bat 'if not exist ${DEPLOY_DIR} mkdir ${DEPLOY_DIR}'
                bat 'xcopy /E /I /Y ${BUILD_DIR} ${DEPLOY_DIR}' // Deploy ke server lokal
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
