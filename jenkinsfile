pipeline {
    agent any
    tools {
        nodejs 'NodeJS 17' // Sesuaikan dengan Node.js yang digunakan
    }
    environment {
        WORKSPACE_DIR = 'E:\\jenkins-workspace\\my-landing-page' // Ubah sesuai kebutuhan
        BUILD_DIR = 'build'
        DEPLOY_DIR = 'E:\\deploy\\my-landing-page'
    }
    stages {
        stage('Checkout') {
            steps {
                ws("${env.WORKSPACE_DIR}") { // Gunakan workspace custom
                    git branch: 'master', url: 'https://github.com/Diansy72/mylandingpage.git'
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                ws("${env.WORKSPACE_DIR}") {
                    bat 'npm install' // Menginstal dependencies dari package.json
                }
            }
        }
        stage('Run Tests') {
            steps {
                ws("${env.WORKSPACE_DIR}") {
                    bat 'npm test -- --ci --passWithNoTests'
                }
            }
            post {
                success {
                    echo 'Tests passed successfully!'
                }
                failure {
                    echo 'Tests failed!'
                    error 'Stopping pipeline due to failed tests.'
                }
            }
        }
        stage('Build') {
            steps {
                ws("${env.WORKSPACE_DIR}") {
                    bat 'npm run build'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to production environment...'
                bat 'if not exist "%DEPLOY_DIR%" mkdir "%DEPLOY_DIR%"'
                bat 'xcopy /E /I /Y "%WORKSPACE_DIR%\\%BUILD_DIR%" "%DEPLOY_DIR%"'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
