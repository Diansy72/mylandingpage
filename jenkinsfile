pipeline {
    agent any
    tools {
        nodejs 'NodeJS 17' // Sesuaikan dengan konfigurasi Node.js di Jenkins
    }
    environment {
        BUILD_DIR = 'docs' // Direktori output build React
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Diansy72/mylandingpage.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install' // Menginstal dependencies dari package.json
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test' // Menjalankan unit test sesuai dengan setupTests.js
            }
            post {
                success {
                    junit 'test-results.xml' // Sesuaikan jika hasil test tersimpan di lokasi berbeda
                }
                failure {
                    echo 'Tests failed!'
                    error 'Stopping pipeline due to failed tests.'
                }
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build' // Perintah build React
                bat 'move build %BUILD_DIR%' // Memindahkan hasil build ke folder docs
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to production environment...'
                bat 'xcopy /E /I /Y %BUILD_DIR% C:\\path\\to\\deployment\\server' // Contoh deploy ke server lokal
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
